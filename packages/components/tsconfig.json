{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react",
        "outDir": "dist",
        "removeComments": true,
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "noFallthroughCasesInSwitch": true,
        "isolatedModules": false,
        "noEmit": false,
        "baseUrl": "src"
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules", ".storybook", "_templates"]
}
